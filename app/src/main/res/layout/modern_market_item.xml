<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container_view"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="1dp"
        card_view:cardMaxElevation="10dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="District"
                android:gravity="center"
                android:textSize="24dp"
                android:id="@+id/district"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_gravity="left|start"
                    android:layout_alignBottom="@+id/details_wrap"
                    android:layout_alignTop="@+id/details_wrap"
                    android:id="@+id/commodity_icon"
                    android:padding="10dp"
                    />

                <TableLayout
                    android:id="@+id/details_wrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/commodity_icon"
                    android:layout_toEndOf="@+id/commodity_icon">
                    <TableRow
                        android:layout_width="wrap_content"
                        >
                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_location"

                            />
                        <TextView
                            android:text="Rohtak"
                            android:id="@+id/market"
                            android:textSize="24dp"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            />
                    </TableRow>
                    <TableRow>
                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_calendar"

                            />
                        <TextView
                            android:text="Rohtak"
                            android:id="@+id/arrival_date"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:textSize="24dp"
                            />
                    </TableRow>
                    <TableRow>
                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/basket"
                            android:id="@+id/basket_icon"
                            />
                        <TextView
                            android:text="Rohtak"
                            android:id="@+id/commodity"
                            android:textSize="24dp"
                            android:layout_width="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingLeft="10dp"
                            />
                    </TableRow>
                    <TableRow>
                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_rupee_symbol"

                            />
                        <TextView
                            android:text="Rohtak"
                            android:id="@+id/modal_price"
                            android:textSize="24dp"
                            android:paddingStart="10dp"
                            android:paddingLeft="10dp"
                            />
                    </TableRow>

                </TableLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>